{
  "name": "agente-hotmart-whatsapp",
  "version": "1.0.0",
  "description": "Agente de IA para WhatsApp que recebe webhooks de abandono de carrinho da Hotmart",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "node dist/database/migrations/run.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "add-course": "ts-node src/scripts/add-course.ts"
  },
  "keywords": [
    "whatsapp",
    "hotmart",
    "openai",
    "webhook",
    "automation"
  ],
  "author": "Raimago",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "openai": "^4.20.1",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.6",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
